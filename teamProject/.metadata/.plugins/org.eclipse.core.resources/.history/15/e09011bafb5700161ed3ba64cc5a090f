			$(function() {
				/* 제목 클릭시 상세 페이지 이동을 위한 처리 이벤트 */
				$("#intapp_request").click(function() {
					var intro_index = $(this).parents("tr").attr("data-num");
					$("#intro_index").val(intro_index);
					console.log("승인번호 : " + intro_index);
					/* // 상세 페이지로 이동하기 위해 form 추가 (id : detailForm)
