<!-- 홍길동 계정으로 접속하기 위한 임시 로그인창 -->

<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>로그인 화면</title>
	
	<!-- 모바일 웹 페이지 설정 -->
	<link rel="shortcut icon" href="/image/icon.png" />
	<link rel="apple-touch-icon" href="/image/icon.png" />
	<!-- 모바일 웹 페이지 설정 끝 -->
	
	<!--[if lt IE 9]>
		<script src="/include/js/html5shiv.js"></script>
	<![endif]-->
	
	<script type="text/javascript" src="/include/js/jquery-1.12.2.min.js"></script>
	<script type="text/javascript">
		$(function() {
			$("#us_email").val("javauser@oracle.com");
			$("#us_password").val("1");
			
			/* 접속 버튼 클릭 시 처리 이벤트 */
			$("#loginBtn").click(function() {
				if (!chkSubmit($("#us_email"), "이메일을")) {
					return;
				} else if (!chkSubmit($("#us_passwd"), "비밀번호를")) {
					return;
				}
				$("#formLogin").attr({
					"method" : "post",
					"action" : "/user/access.do"
				});
				$("#formLogin").submit();
			});
			
			$(".findBtn").click(function(){
				location.href="/user/find.do";
			});
			$(".joinBtn").click(function(){
				location.href="/user/join.do";
			});
			
			/* 접속해제 버튼 클릭 시 처리 이벤트 */
			$("#logoutBtn").click(function() {
				$("#formLogout").attr({
					"method" : "post",
					"action" : "/user/exit.do"
				});
				$("#formLogout").submit();
			});
		});
	</script>
</head>
<body>
<c:choose>
	<c:when test="${empty sessionScope.blancheUser}">
		<form name="formLogin" id="formLogin">
			<table>
				<tr>
					<td colspan="2" align="center">로그인</td>
				</tr>
				<tr>
					<td>이메일</td>
					<td><input type="text" id="us_email" name="us_email"/></td>
				</tr>
				<tr>
					<td>비밀번호</td>
					<td><input type="password" id="us_password" name="us_password"/></td>
				</tr>
				<tr>
					<td colspan="2" align="center">
						<input type="button" id="loginBtn" name="loginBtn" value="로그인"/>
					</td>
				</tr>
				<tr>
					<td colspan="2" align="center">
						<span class="find">비밀번호 찾기</span>
						<span class=joinus>회원가입</span>
					</td>
				</tr>
				<tr>
					<td colspan="2" align="center"></td>
				</tr>
			</table>
		</form>
	</c:when>
	<c:otherwise>
		<form name="formLogout" id="formLogout">
			${sessionScope.blancheUser.us_nickname}님. 환영합니다.<br />
			<input type="button" name="logoutBtn" id="logoutBtn" value="접속해제">
		</form>
	</c:otherwise>
</c:choose>
</body>
</html>